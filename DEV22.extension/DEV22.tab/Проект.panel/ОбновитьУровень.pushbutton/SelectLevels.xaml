<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Levels" Height="200" Width="400">
    <StackPanel>
        <TextBlock Margin="10,10,10,0" Text="Select Old Level:"/>
        <ComboBox x:Name="OldLevelComboBox" Width="360" Margin="10,5,10,0"/>
        <TextBlock Margin="10,10,10,0" Text="Select New Level:"/>
        <ComboBox x:Name="NewLevelComboBox" Width="360" Margin="10,5,10,10"/>
        <Button Content="OK" Width="80" Margin="10" HorizontalAlignment="Center" Click="OnOKClick"/>
    </StackPanel>
</Window>